<h1>Place a Bid for <%= @skin.name %></h1>

<p>Current Maximum Bid: <%= number_to_currency(@skin.bids.maximum(:amount) || @skin.starting_price) %></p>

<%= form_with(model: @bid, local: true) do |form| %>
  <% if @bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bid.errors.count, "error") %> prevented this bid from being saved:</h2>
      <ul>
        <% @bid.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount, "Bid Amount" %>
    <%= form.number_field :amount, step: 0.01, required: true %>
  </div>

  <div class="field">
    <%= form.label :user_id, "User" %>
    <%= form.collection_select :user_id, User.all, :id, :username, prompt: "Select a User" %>
  </div>

  <%= form.hidden_field :skin_id, value: @skin.id %>

  <div class="actions">
    <%= form.submit "Place Bid", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Skins", skins_path, class: "btn btn-secondary" %>
